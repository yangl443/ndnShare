<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ff3097fd"
    android:weightSum="10">

    <EditText
        android:id="@+id/search"
        android:layout_marginLeft="25dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_weight="7"
        android:background="@drawable/own_search_bg_selector"
        android:clickable="true"
        android:drawableLeft="@drawable/own_search_drawable_selector"
        android:hint="\tsearch content"
        android:textColor="@drawable/own_search_textcolor_selector"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/search"
        android:layout_weight="3"
        android:text="Search" />

</LinearLayout>